{
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/15.0.6/clangd_15.0.6/bin/clangd",
  "clangd.arguments": [
    "-j=4",
    "--enable-config",
    "--all-scopes-completion=true",
    "--limit-results=70"
  ],
  "clangd.fallbackFlags": ["-W","-Wall"],
  "clangd.checkUpdates": true,
  "suggest.timeout": 5000,
  "diagnostic.level": "information",
  "suggest.maxCompleteItemCount": 70,
  "suggest.localityBonus": false,
  "suggest.enablePreselect": true,
  "codeLens.enable": true,
  "suggest.noselect": false,
  "suggest.labelMaxLength": 100,
  "suggest.detailField": "abbr",
  "suggest.minTriggerInputLength": 3,
  "yaml.schemas": {
    "/home/lopezmar/Projets/atlas/resource/atlas.schema.json": "atlas.yaml",
    "http://json.schemastore.org/gitlab-ci": "**/.gitlab-ci.yml"
  },
  "yaml.completion": true,
  "yaml.validate": true,
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "     ",
  "git.gitlab.hosts": [
    "git.damavan04.dmv"
  ],
  "git.removedSign.text": "-",
  "git.topRemovedSign.text": "-",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "git.addGBlameToVirtualText": false,
  "html.autoClosingTags": true,
  "git.showCommitInFloating": true,
  "suggest.snippetIndicator": "",
  "semanticTokens.filetypes": ["*"],
  "suggest.completionItemKindLabels": {

    "keyword": "",
    "variable": "",
    "value": "",
    "operator": "",
    "function": "",
    "reference": "渚",
    "constant": "",
    "method": "",
    "struct": "פּ",
    "class": "",
    "interface": "",
    "text": "",
    "enum": "",
    "enumMember": "",
    "module": "",
    "color": "",
    "property": "",
    "field": "",
    "unit": "",
    "event": "鬒",
    "file": "",
    "folder": "",
    "snippet": "",
    "typeParameter": "",
    "default": ""
  },
  "git.enableGutters": true,
  "coc.source.buffer.enable": false,
  "coc.source.around.enable": false,
  "coc.source.issues.enable": false,
  "git.semanticCommit.filetypes": [],
  "coc.preferences.extensionUpdateCheck": "daily",
  "texlab.chktex.onOpenAndSave": true,
  "texlab.auxDirectory": "build/",
  "diagnostic-languageserver.filetypes": {
    "cpp": "cppcheck",
    "pandoc": "languagetool",
    "tex":"textidote"
  },
  "diagnostic-languageserver.enable": false,
  "diagnostic-languageserver.linters": {
    "textidote": {
      "command": "textidote",
      "debounce": 500,
      "args": ["--type", "tex", "--check", "fr", "--output", "singleline", "--no-color"],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "textidote",

      "formatLines": 1,
      "formatPattern": [
	"\\(L(\\d+)C(\\d+)-L(\\d+)C(\\d+)\\):(.+)\".+\"$",
	{
	  "line": 1,
	  "column": 2,
	  "endLine": 3,
	  "endColumn": 4,
	  "message": 5
	}
      ]
    },
    "languagetool" : {
        "command": "/home/lopezmar/dotfiles/soft/LanguageTool-5.5-stable/languagetool.sh",
        "debounce": 200,
        "offsetLine": 0,
        "offsetColumn": 0,
        "sourceName": "languagetool",
        "formatLines": 3,
        "formatPattern": [
          "^\\d+?\\.\\)\\s+Line\\s+(\\d+),\\s+column\\s+(\\d+),\\s+([^\\n]+)\nMessage:\\s+(.*)\n(Suggestion:\\s+.*)(\\r|\\n)*$",
          {
            "line": 1,
            "sourceName": "%file",
            "column": 2,
            "message": [ 4, 3, "\n",  5 ]
          }
        ],
        "args": [
          "-adl",
          "%file"
        ]
      },
      "cppcheck": {
        "command": "cppcheck",
        "args": [
          "--enable=performance,warning,portability",
          "--std=c++11",
          "--language=c++",
          "--suppress=missingIncludeSystem",
          "%file"
        ],
        "sourceName": "cppcheck",
        "debounce": 99,
        "isStderr": true,
        "isStdout": false,
        "offsetLine": 0,
        "offsetColumn": 0,
        "formatPattern": [
          "^[^ ]+:(\\d*):(\\d+):\\s+([^:]+):\\s+(.+)$",
          {
            "line": 1,
            "endLine": 1,
            "column": 2,
            "endColumn": 2,
            "sourceName": "%file",
            "message": 4,
            "security": 3
          }
        ],
        "securities": {
          "error": "error",
          "warning": "warning",
          "note": "hint"
        }
      }
  },
  "python.analysis.stubPath": ".typestub",
  "python.analysis.diagnosticSeverityOverrides": {
   "reportMissingTypeStubs": "warning"  
  }
}
